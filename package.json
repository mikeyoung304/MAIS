{
  "name": "macon-ai-solutions",
  "version": "0.0.0",
  "private": true,
  "description": "Macon AI Solutions - AI-Powered Tenant Management Platform",
  "workspaces": [
    "apps/*",
    "client",
    "server",
    "packages/*"
  ],
  "scripts": {
    "vercel-build": "npm run build -w @macon/contracts && npm run build -w @macon/shared && cd apps/web && next build",
    "doctor": "tsx server/scripts/doctor.ts",
    "lint": "eslint . --ext .ts,.tsx --ignore-pattern 'apps/web/**'",
    "lint:web": "npm run lint --workspace=apps/web",
    "lint:all": "npm run lint && npm run lint:web",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "test": "npm run test --workspace=server",
    "test:unit": "npm run test --workspace=server -- test/ --exclude=\"test/integration/**\" --exclude=\"test/http/**\"",
    "test:integration": "npm run test:integration --workspace=server",
    "test:watch": "npm run test:watch --workspace=server",
    "test:coverage": "npm run test:coverage --workspace=server",
    "test:coverage:unit": "npm run test:coverage:unit --workspace=server",
    "test:coverage:report": "npm run test:coverage:report --workspace=server",
    "test:e2e": "playwright test -c e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test -c e2e/playwright.config.ts --ui",
    "test:e2e:headed": "playwright test -c e2e/playwright.config.ts --headed",
    "test:playwright:diagnostics": "node test-playwright-diagnostics.js",
    "dev:api": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "dev:all": "concurrently -n server,client,stripe -c cyan,magenta,yellow \"npm run dev:api\" \"npm run dev:client\" \"stripe listen --forward-to localhost:3001/v1/webhooks/stripe\"",
    "dev:e2e": "concurrently -n server,client -c cyan,magenta \"npm run dev:api\" \"npm run dev:client\"",
    "wait-for-servers": "node e2e/wait-for-servers.js",
    "verify-build": "bash scripts/verify-build.sh",
    "prepare": "node -e \"if (process.env.CI || process.env.RENDER) process.exit(0)\" && husky || true"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.56.0",
    "@tanstack/react-query-devtools": "^5.56.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.7",
    "postcss": "^8.4.45",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.10",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@radix-ui/react-separator": "^1.1.8"
  }
}
