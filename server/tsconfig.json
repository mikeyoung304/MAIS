{
  "compilerOptions": {
    "preserveSymlinks": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@macon/contracts": ["../packages/contracts/src"],
      "@macon/shared": ["../packages/shared/src"],
      "@generated/prisma": ["./src/generated/prisma/client"],
      "@db": ["./src/db"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/adapters/lib"
  ]
}
