{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "rules": {
    // Sprint 2.2 Type Safety: Prevent backsliding on `as any` usage
    // Reduced from 24 to 6 casts (75% reduction)
    // Any new `as any` requires justification + BACKLOG ticket
    "@typescript-eslint/no-explicit-any": "error",

    // Allow intentional unused vars with _ prefix (e.g., _tenantId in fakes)
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],

    // Enforce consistent type imports
    "@typescript-eslint/consistent-type-imports": [
      "error",
      {
        "prefer": "type-imports"
      }
    ]
  },
  "overrides": [
    {
      // Relax rules for test files
      "files": ["**/*.spec.ts", "**/*.test.ts", "**/test/**/*.ts"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "warn"
      }
    }
  ]
}
