{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "rules": {
    // Prevent console.log in production code - use logger instead
    // Allow console.warn and console.error for critical issues
    "no-console": ["error", { "allow": ["warn", "error"] }],

    // Sprint 2.2 Type Safety: Track `any` usage
    // Changed to warn to unblock CI during quality remediation
    // TODO: Fix any types incrementally and restore to error
    "@typescript-eslint/no-explicit-any": "warn",

    // Allow intentional unused vars with _ prefix (e.g., _tenantId in fakes)
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],

    // Enforce consistent type imports
    "@typescript-eslint/consistent-type-imports": [
      "error",
      {
        "prefer": "type-imports"
      }
    ]
  },
  "overrides": [
    {
      // Relax rules for test files
      "files": ["**/*.spec.ts", "**/*.test.ts", "**/test/**/*.ts"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "warn",
        "no-console": "off"
      }
    },
    {
      // PREVENTION: Prevent direct PrismaClient instantiation in route files
      // Routes must receive dependencies via DI, not create their own database clients
      // This prevents CI failures when tests run in mock mode without DATABASE_URL
      // Fix: Use repository pattern - inject via options object in route factory
      "files": ["**/routes/**/*.ts"],
      "excludedFiles": ["**/routes/index.ts"],
      "rules": {
        "no-restricted-syntax": [
          "error",
          {
            "selector": "NewExpression[callee.name='PrismaClient']",
            "message": "Direct PrismaClient instantiation in routes is forbidden. Use repository pattern: inject via DI options object instead. See docs/solutions/PREVENTION-INDEX.md"
          }
        ]
      }
    }
  ]
}
